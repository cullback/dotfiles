// https://github.com/zellij-org/zellij/blob/main/zellij-utils/assets/config/default.kdl
theme "catppuccin-frappe"

keybinds {
    normal {
        unbind "Ctrl t"

        // we use arrow keys
        unbind "Alt h"
        unbind "Alt j"
        unbind "Alt k"
        unbind "Alt l"
    }

    shared {
        bind "Ctrl b" { SwitchToMode "Tab"; }
        bind "Alt m" { ToggleFloatingPanes; }
        unbind "Alt f"
    }
}
